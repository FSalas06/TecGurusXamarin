<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="TGXFExampleApp.Common.Controls.CustomButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Frame x:Name="f_btn" BackgroundColor="#0ea152" Padding="20" HasShadow="false">
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Orientation="Horizontal">
                <Button
                    x:Name="btn_loading"
                    BackgroundColor="#0ea152"
                    BorderColor="Transparent"
                    Clicked="Handle_Clicked" />
                <ActivityIndicator x:Name="a_load" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
