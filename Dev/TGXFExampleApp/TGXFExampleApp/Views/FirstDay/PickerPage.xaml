<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TGXFExampleApp.Views.FirstDay.PickerPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Picker
                Title="App picker"
                ItemsSource="{Binding PickerListItem}"
                SelectedIndex="{Binding ItemPickerIndex}" />

            <DatePicker Format="dd MM, yyyy" TextColor="Maroon"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
