<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TGXFExampleApp.Views.FirstDay.ButtonPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            Spacing="30">
            <Button
                Command="{Binding AlertShowCommand}"
                Text="Alert" />
            <Button
                Command="{Binding ActionSheetCommand}"
                Text="Options" />
            <Button
                Command="{Binding YesNoAlertCommand}"
                Style="{StaticResource ButtonAccept}" />
            <Button
                Command="{Binding YesNoAlertCommand}"
                Style="{StaticResource ButtonCancel}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
