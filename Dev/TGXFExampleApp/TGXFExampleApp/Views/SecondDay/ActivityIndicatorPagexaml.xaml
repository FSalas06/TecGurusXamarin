<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TGXFExampleApp.Views.SecondDay.ActivityIndicatorPagexaml"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <StackLayout Orientation="Horizontal">
                <ActivityIndicator
                    IsRunning="{Binding RunActInd}"
                    IsVisible="{Binding VisibleActInd}"
                    Color="Red" />
                <ActivityIndicator
                    IsRunning="{Binding RunActInd}"
                    IsVisible="{Binding VisibleActInd}"
                    Color="Blue" />
                <ActivityIndicator
                    IsRunning="{Binding RunActInd}"
                    IsVisible="{Binding VisibleActInd}"
                    Color="Pink" />
                <ActivityIndicator
                    IsRunning="{Binding RunActInd}"
                    IsVisible="{Binding VisibleActInd}"
                    Color="Black" />
            </StackLayout>
            <Button Command="{Binding RunningCommand}" Text="Run Activity Indicator" />
            <Button Command="{Binding VisibleCommand}" Text="Show/Hide Activity Indicator" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>