<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppEjemplo.PageExample"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="Gold"
            Spacing="10">
            <Button
                x:Name="btn1"
                BackgroundColor="Red"
                BorderColor="Green"
                BorderRadius="6"
                BorderWidth="3"
                Clicked="btn1_Clicked"
                Text="Click!" />
            <Label
                x:Name="lb1"
                FontSize="Large"
                TextColor="White" />
            <Image Source="logo.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>